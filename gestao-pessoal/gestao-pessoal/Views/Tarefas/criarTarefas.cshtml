@page
@model gestao_pessoal.Views.Tarefas.criarTarefasModel
@{
}

<div class="home-btn d-none d-sm-block">
    <a href="Index.cshtml" class="text-white"><i class="fas fa-home h2"></i></a>
</div>

<!-- Begin page -->
<div class="taskimage"></div>
<div class="wrapper-page account-page-full">

    <div class="card">
        <div class="card-body">

            <div class="p-3">
                @using (Html.BeginForm("Create", "Tarefas"))
                {
                <form class="form-horizontal m-t-30" action="/Tarefas/Create" method="POST">
                    <input name="__RequestVerificationToken" type="hidden" value="<removed for brevity>" />
                    <div class="form-group">
                        <label for="nomeTarefa">Nome Tarefa</label>
                        <input type="text" class="form-control" name="nomeTarefa" id="useremail" placeholder="Insira o nome da tarefa">
                    </div>

                    <!--<div class="form-group">
                        <label for="username">Data Inicio</label>
                        <div>
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="mm/dd/yyyy" id="datepicker">
                                <div class="input-group-append">
                                    <span class="input-group-text"><i class="mdi mdi-calendar"></i></span>
                                </div>
                            </div>
                        </div>
                    </div> -->
                    <div class="form-group">
                        <label for="dataInicio">Data Inicio</label>
                        <input type="text" class="form-control" name="dataInicio" id="dataInicio" placeholder="Insira a data no formato: 'yyyy-mm-dd'">
                    </div>
                    <div class="form-group">
                        <label for="dataFim">Data Fim</label>
                        <input type="text" class="form-control" name="dataFim" id="dataFim" placeholder="Insira a data no formato: 'yyyy-mm-dd'">
                    </div>
                    <div class="form-group">
                        <label for="prioridades">Selecione a prioridade da tarefa: </label>
                        <select class="form-control select2" name="prioridades">
                            <option value="0"><-- Selecione a Prioridade --></option>
                            <option value="1">Muito Baixa</option>
                            <option value="2">Baixa</option>
                            <option value="3">Média</option>
                            <option value="4">Alta</option>
                            <option value="5">Muito Alta</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Insira Observações a sua tarefa</label>
                        <div>
                            <textarea required class="form-control" rows="5" name="obs"></textarea>
                        </div>
                    </div>
                    <div class="form-group row m-t-20">
                        <div class="col-12 text-right">
                            <button class="btn btn-primary w-md waves-effect waves-light" type="submit">Criar Tarefa</button>
                        </div>
                    </div>
                </form>
                }
            </div>

        </div>
    </div>

</div>

